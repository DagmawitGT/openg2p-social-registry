<odoo>

    <record id="view_res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="approval_status"/>
            </field>
        </field>
    </record>

<record id="view_res_partner_change_request_form" model="ir.ui.view">
    <field name="name">res.partner.change.request.form</field>
    <field name="model">res.partner.change.request</field>
    <field name="arch" type="xml">
        <form string="Change Request">
            <header>
                <button string="Approve" type="object" name="approve_changes" class="btn-primary" />
                <button string="Reject" type="object" name="reject_changes" class="btn-secondary" />
            </header>
            <sheet>
                <group>
                    <field name="partner_id"/>
                    <field name="new_values"/>
                    <field name="state"/>
                </group>
            </sheet>

        </form>
    </field>
</record>

<record id="view_res_partner_change_request_tree" model="ir.ui.view">
    <field name="name">res.partner.change.request.tree</field>
    <field name="model">res.partner.change.request</field>
    <field name="arch" type="xml">
        <tree string="Change Request" class="text-left">
                <field name="partner_id"/>
                <field name="new_values_display" string="New Values"/>
                <field name="state"/>
                <button title="Approve" icon="fa-check" name="approve_changes" type="object" class="btn btn-success" invisible="state != 'pending'"/>
                <button title="Reject" icon="fa-times" name="reject_changes" type="object" class="btn btn-danger" invisible="state != 'pending'"/>

        </tree>
    </field>
</record>

   <record id="edit_request_action" model="ir.actions.act_window">
        <field name="name">Update Request</field>
        <field name="res_model">res.partner.change.request</field>
        <field name="view_mode">tree,form</field>
    </record>

<menuitem
        id="edit_request_menu"
        name="Update Requests"
        action="edit_request_action"
        sequence="100000"
        groups="g2p_lock_unlock.registry_data_validator"
        parent = "g2p_registry_base.g2p_main_menu_root"/>

</odoo>
