<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="request_wiz_view_form" model="ir.ui.view">
        <field name="name">request.wiz.view.form</field>
        <field name="model">request.wiz</field>
        <field name="arch" type="xml">
            <form >
                <p class="oe_grey">
                    Please specify reason for the request
                </p>
                <group>
                    <group>
                        <field name="record_ids" widget="many2many_tags"/>
                        <field name="reason" />
                    </group>
                </group>
                <footer>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                    <button name="send_request" string="Confirm" type="object" class="btn-primary"/>
                </footer>
            </form>
            
        </field>
    </record>

    <record id="base_res_partner_action_server" model="ir.actions.server">
        <field name="name">Suggest Edit</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
            action = {
                'type': 'ir.actions.act_window',
                'res_model': 'request.wiz',
                'target': 'new',
                'views': [(env.ref('g2p_lock_unlock.request_wiz_view_form').id, 'form')],
                'context': {'default_record_ids': [(6, 0, records.ids)]},
            }
        </field>
    </record>

</odoo>
