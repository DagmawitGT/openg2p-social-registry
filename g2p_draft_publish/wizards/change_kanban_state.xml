<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="change_state_wizard_view" model="ir.ui.view">
        <field name="name">change.state.wizard.form</field>
        <field name="model">change.state.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="validation_status" />
                    <field name="remark" />
                </group>
                <footer>
                    <button
                        name="change_kanban_state"
                        string="Save Change"
                        type="object"
                        class="btn btn-primary"
                    />
                    <button string="Cancel"
                        class="btn-secondary"
                        special="cancel" />
                </footer>
            </form>
        </field>
    </record>

<record id="change_state_wizard_action" model="ir.actions.act_window">
    <field name="name">Change State</field>
    <field name="res_model">change.state.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>
</odoo>
